# Application
NODE_ENV=development
PORT=3000

# PostgreSQL (used with Prisma or TypeORM, etc.)
# Format: postgres://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=postgres://myuser:mypassword@postgres:5432/mydatabase?schema=public

# Elasticsearch
ELASTIC_URL=http://elasticsearch:9200

# JWT
JWT_SECRET_KEY=your_secure_jwt_secret_here

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Mail
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your@email.com
MAIL_PASSWORD=your_email_password
